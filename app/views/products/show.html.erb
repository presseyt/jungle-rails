<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

  </article>

  <article class="product-ratings">
    <h2> Reviews </h2>
    <h4> <%= @product.average_rating_string %> </h4>

    <div class="row">
      <div class="col-sm-6 col-sm-offset-1">

        <%= form_for [@product, @product.ratings.build] do |form| %>
          <div class="form-group">
            <%= form.label :rating %>
            <%= form.number_field :rating, in: 1..5, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :description %>
            <%= form.text_area :description, class: 'form-control' %>
          </div>
        <%= form.submit 'Make Review', class: 'btn btn-primary' %>

      <% end %>
      </div>
    </div>

    <br>

    <% @product.ratings.each do |rating| %>
      <% if rating.description %>
        <div class="well">
          <p> <%= rating.rating %>/5 <strong><%=rating.user.name %></strong>: <%= rating.description %></p>
        </div>
      <% end %>
    <% end %>
  </article>

</section>
